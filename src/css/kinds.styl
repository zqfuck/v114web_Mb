
.banner
  height: 4.9rem
  //background:url("../assets/banner_bg.jpg") no-repeat center
  background-size:cover
  padding:0.28rem 8% 0
  .img_logo
    height:0.6rem
    margin-left:-0.2rem
  .nav
    width:0.6rem
    height: 0.6rem
    position: absolute
    right: -0.2rem
    top: 0
    .btn-nav
      width:100%
      height:100%
      background: transparent
      border: none
      outline: none
      -webkit-transition: all .5s ease
      -moz-transition: all .5s ease
      -ms-transition: all .5s ease
      -o-transition: all .5s ease
      transition: all .5s ease
      z-index: 99999

.power_box
  padding 0 8%
  ul
    flex-direction row
    justify-content space-between
    li
      width 33%
      height 0.5rem
      line-height 0.5rem
      font-size 0.2rem
      margin-bottom 0.64rem
      float left
      color #888
      text-align justify
      img
        width 0.4rem
        margin-right 0.1rem
.focus_box
  padding 0 8%
  clear both
  background: url("../assets/blue_short_bg@2x.png") no-repeat center
  background-size cover
  .focus_kind
    width 43%
    position: relative
    img
      height 1.6rem
    p
      position absolute
      bottom 0.2rem
      width 100%
      text-align center
