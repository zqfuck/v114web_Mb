
.banner
  height: 4.9rem
  //background:url("../assets/banner_bg.jpg") no-repeat center
  background-size:cover
  padding:0.28rem 8% 0
  .img_logo
    height:0.6rem
    margin-left:-0.2rem
  .nav
    width:0.6rem
    height: 0.6rem
    position: absolute
    right: -0.2rem
    top: 0
    .btn-nav
      width:100%
      height:100%
      background: transparent
      border: none
      outline: none
      -webkit-transition: all .5s ease
      -moz-transition: all .5s ease
      -ms-transition: all .5s ease
      -o-transition: all .5s ease
      transition: all .5s ease
      z-index: 99999

.power_box
  padding 0 8%
  ul
    display flex
    flex-wrap wrap
    flex-direction row
    align-items center
    justify-content space-around
    padding-left 5%
    li
      width 32%
      height 0.5rem
      line-height 0.5rem
      font-size 0.2rem
      margin-bottom 0.64rem
      color #888
      text-align justify
      img
        width 0.4rem
        margin-right 0.1rem
.focus_box
  padding 0 8%
  clear both
  background: url("../assets/blue_short_bg@2x.png") no-repeat center
  background-size cover
  .all_box
    display flex
    justify-content space-between
    flex-wrap wrap
    padding-bottom 0.32rem
    .focus_kind
      width 46%
      height 1.88rem
      margin-bottom 0.32rem
      border-radius 0.16rem
      background #fff
      position: relative
      display flex
      align-items center
      justify-content center
      flex-direction column
      img
        height 1.32rem
      p
        width 100%
        text-align center
